<h1>All Posts</h1>

<table class="table table-bordered">

    <thead>
        <tr>
            <th>ID</th>
            <th>FILE</th>
            <th>Title</th>
            <th>Status</th>
            <th>Body</th>
            <th>Date</th>
            <th>Veiw</th>
        </tr>

    </thead>

    <tbody>
        {{#each posts}}
        <tr>
            <td>{{id}}</td> 
            <td><img height="50" src="/uploads/{{file}}" alt=""></td>
            <td>{{title}}</td>
            <td>{{status}}</td>
            <td>{{body}}</td>
            <td>{{date}}</td>
            <td><a href="/post/{{id}}">veiw</a></td>
            <td><a href="/admin/posts/edit/{{id}}" class="btn btn-info">Edit</a></td>
            <td>
            <form action="/admin/posts/{{id}}?_method=DELETE" method="post">

                 <button type="submit" class="btn btn-danger">DELETE</button>
            </form>
            </td>
            
        </tr>
        {{/each}}

    </tbody>




</table>